<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.judge.popularmovies" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".act.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".act.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".act.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".act.MainActivity" />
        </activity>
        <activity
            android:name=".act.MovieActivity"
            android:label="@string/title_activity_movie"
            android:parentActivityName=".act.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".act.MainActivity" />
        </activity>
    </application>

</manifest>
